<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#01579B" />
            <gradient android:angle="-90" android:startColor="#3B94DC" android:endColor="#BE01579B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2B6FA5" />
            <solid android:color="#1C86DA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#739AB8" />
            <gradient android:angle="-90" android:startColor="#195788" android:endColor="#499ADA" />
        </shape>
    </item>
</selector>