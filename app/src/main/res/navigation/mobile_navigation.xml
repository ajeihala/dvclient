<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/menu_home"
        android:tag="comments"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="10"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/menu_gallery"
        android:tag="gallery"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="1"
            />
        <action
            android:id="@+id/action_nav_gallery_to_nav_news"
            app:destination="@id/nav_news" />
    </fragment>
    <fragment
        android:id="@+id/nav_uploader"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/menu_slideshow"
        android:tag="uploader"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="2"
            />
        <action
            android:id="@+id/action_nav_uploader_to_nav_articles"
            app:destination="@id/nav_articles" />
    </fragment>
    <fragment
        android:id="@+id/nav_vuploader"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/vuploader"
        android:tag="vuploader"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="3"
            />
        <action
            android:id="@+id/action_nav_vuploader_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>
    <fragment
        android:id="@+id/nav_news"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/menu_news"
        android:tag="usernews"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="4"
            />
        <action
            android:id="@+id/action_nav_news_to_nav_books"
            app:destination="@id/nav_books" />
    </fragment>
    <fragment
        android:id="@+id/nav_muzon"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/muzon"
        android:tag="muzon"
       tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="5"
            />
        <action
            android:id="@+id/action_nav_muzon_to_nav_vuploader"
            app:destination="@id/nav_vuploader" />
    </fragment>
    <fragment
        android:id="@+id/nav_books"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/books"
        android:tag="books"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="6"
            />
        <action
            android:id="@+id/action_nav_books_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_articles"
        android:name="com.dimonvideo.client.ui.main.MainFragment"
        android:label="@string/articles"
        android:tag="articles"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="7"
            />
        <action
            android:id="@+id/action_nav_articles_to_nav_muzon"
            app:destination="@id/nav_muzon" />
    </fragment>
    <fragment
    android:id="@+id/nav_forum"
    android:name="com.dimonvideo.client.ui.forum.ForumFragment"
    android:label="@string/menu_forum"
    android:tag="topics"
    tools:layout="@layout/fragment_forum">
    <argument
        android:name="category"
        android:defaultValue="8"
        />
        <action
            android:id="@+id/action_nav_forum_to_nav_posts"
            app:destination="@id/nav_posts" />
        <action
            android:id="@+id/action_nav_forum_to_nav_home"
            app:destination="@id/nav_home" />

    </fragment>
    <fragment
        android:id="@+id/nav_posts"
        android:name="com.dimonvideo.client.ui.forum.ForumFragmentPosts"
        android:label="@string/tab_topics_no_posts"
        android:tag="posts"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="category"
            android:defaultValue="9"
            />
        <action
            android:id="@+id/action_nav_posts_to_nav_forum"
            app:destination="@id/nav_forum" />
    </fragment>
</navigation>